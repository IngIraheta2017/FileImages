{% extends 'base.html.twig' %}

{% block body %}
    <h1>Members list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Imagepath</th>
                <th>Title</th>
                <th>Description</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for member in members %}
            <tr>
                <td><a href="{{ path('members_show', { 'id': member.id }) }}">{{ member.id }}</a></td>
                <td>{{ member.imagePath }}</td>
                <td>{{ member.title }}</td>
                <td>{{ member.description }}</td>
                <td>{% if member.date %}{{ member.date|date('Y-m-d') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('members_show', { 'id': member.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('members_edit', { 'id': member.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('members_new') }}">Create a new member</a>
        </li>
    </ul>
{% endblock %}
